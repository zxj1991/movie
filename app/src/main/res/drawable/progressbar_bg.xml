<?xml version="1.0" encoding="UTF-8"?>            
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">            
	<!--  设置背景色（黑色）  -->               
	<item  android:id="@android:id/background" >              
	<shape>
		<corners android:radius="5dip" />               
			<gradient android:startColor="@color/gray_thin"              
				  android:endColor="@color/gray_thin" />              
	</shape>             
	</item>                                
	
	<!--  设置进度条颜色（白色）  -->               
	<item  android:id="@android:id/progress" >              
	<clip>               
		<shape>                
			<corners android:radius="5dip" />                
		<gradient  android:startColor="@color/titlebar_bg"               
			   android:endColor="@color/titlebar_bg" />               
		</shape>              
	</clip>             
	</item>            

</layer-list>
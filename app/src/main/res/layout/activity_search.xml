<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#ffdddddd"
        android:layout_width="fill_parent"
        android:layout_height="60.0dip">

        <LinearLayout
            android:id="@+id/ac_sousuo"
            android:background="@drawable/sousuo_style"
            android:layout_width="0.0dip"
            android:layout_height="45.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="6.0">

            <EditText
                android:id="@+id/editText_search"
                android:layout_gravity="center"
                android:background="@null"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:hint="输入片名、主演或导演"
                android:inputType="text"
                android:imeOptions="actionSearch" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="0.0dip"
            android:layout_height="45.0dip"
            android:layout_weight="1.0">

            <TextView
                android:textSize="16.0sp"
                android:id="@+id/search_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消" />
        </LinearLayout>
    </LinearLayout>


    <ListView
        android:id="@+id/listview_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_bianju_margin"
        android:layout_marginRight="@dimen/activity_bianju_margin"
        android:scrollbars="none">
    </ListView>

</LinearLayout>

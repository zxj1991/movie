<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_bianju_margin"
        android:layout_marginRight="@dimen/activity_bianju_margin">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.example.movie.View.MyListView
            android:id="@+id/listview_fenlei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null">
        </com.example.movie.View.MyListView>

        <include layout="@layout/layout_split_line"/>

        <com.example.movie.View.MyGridView
            android:id="@+id/gridview_fenlei"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="40dp"
            android:stretchMode="columnWidth"
            android:numColumns="3" >

        </com.example.movie.View.MyGridView>


    </LinearLayout>
</ScrollView>
    </LinearLayout>

</LinearLayout>

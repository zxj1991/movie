<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.movie">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.DiffMoviesActivity" />
        <activity android:name=".Activity.FoundActivity" />
        <activity android:name=".Activity.HelpActivity" />
        <activity android:name=".Activity.LoginActivity" />
        <activity android:name=".Activity.LoveShareActivity" />
        <activity
            android:name=".Activity.MoviesPlayActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity android:name=".Activity.MyCollectActivity" />
        <activity android:name=".Activity.PersonalActivity" />
        <activity android:name=".Activity.PresentRecordActivity" />
        <activity android:name=".Activity.RegisterActivity" />
        <activity android:name=".Activity.ResetActivity" />
        <activity android:name=".Activity.SearchActivity" />
        <activity android:name=".Activity.SecurityActivity" />
        <activity android:name=".Activity.SetActivity" />
        <activity android:name=".Activity.ShareRecordActivity" />
        <activity android:name=".Activity.WithdrawalsActivity" />


    </application>

</manifest>
